<%- include('layout/header') %>

<div class="container">
    <div class="row">
        <h2>Edit user <%= user.name %></h2>
        <div class="col-lg-6">
            <form action="/update/<%= user._id %>" method="post" id="add-form" enctype="multipart/form-data">
              <div class="form-group">
                <label for="exampleInputEmail1">Name</label>
                <input type="text" name="name" value="<%= user.name %>" class="form-control" placeholder="Name">
              </div>
              <div class="form-group">
                <label for="exampleInputPassword1">Email</label>
                <input type="email" name="email" value="<%= user.email %>" class="form-control" placeholder="Email">
              </div>
              <div class="form-group">
                  <label for="exampleInputPassword1">Phone</label>
                  <input type="text" name="phone" value="<%= user.phone %>" class="form-control" placeholder="Phone">
                </div>
              <div class="form-group">
                  <label for="exampleFormControlFile1">image</label><br>
                  <input type="file" name="image" class="form-control-file">
                  <img width="70" height="70" src="/<%= user.image %>" alt="image">
              </div>
               <input type="hidden" name="old_image" value="<%= user.image %>">
               <button type="submit" class="btn btn-primary">Submit</button>
                <!-- <div class="form-group">
                    <input type="submit" value="Add User" class="form-control-file">
                </div> -->
              </form>
        </div>
    </div>
</div>


<%- include('layout/footer') %>